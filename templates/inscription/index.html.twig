{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}

{# {{form(form)}} #}
{{ form_start(form)}}

<section class="mx-5 my-5 col-lg-8 cadre">
                 
          
         
        <div class="mb-0">
          {{ form_row(form.nom ,{'attr':{'class':' form form-control'}}) }}
        </div>
        <div class="mb-0">
          {{ form_row(form.prenom ,{'attr':{'class':' form form-control'}}) }}
        </div>
        <div class="mb-0">
          {{ form_row(form.telephone ,{'attr':{'class':' form form-control'}}) }}
        </div>
        <div class="mb-0">
          {{ form_row(form.adresse ,{'attr':{'class':' form form-control'}}) }}
        </div>
        <div class="mb-0">
          {{ form_row(form.cp ,{'attr':{'class':' form form-control'}}) }}
        </div>
        <div class="mb-0">
          {{ form_row(form.ville ,{'attr':{'class':' form form-control'}}) }}
        </div>
        <div class="mb-0">
          {{ form_row(form.email ,{'attr':{'class':' form form-control'}}) }}
        <div class="mb-0">
          {{ form_row(form.password ,{'attr':{'class':' form form-control'}}) }}
        </div>

         <div class="mb-0">
          {{ form_widget(form.inscription, {'attr':{'class':'btn btn-outline-dark'}}) }}
        </div>



        
</section>

{{ form_end(form)}}
{% endblock %}
